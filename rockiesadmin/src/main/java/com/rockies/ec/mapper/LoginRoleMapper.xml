<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.rockies.ec.mapper.LoginRoleMapper">
   <insert id="saveLoginRole" parameterType="com.rockies.ec.model.LoginRole">
		INSERT INTO
		s_login_role
		(`lid`,`role_id`)
		VALUES (#{lid},#{roleId});
	</insert>

	<delete id="deleteLoginRole" parameterType="java.lang.Integer">
		delete from s_login_role where lid=#{lid}
	</delete>
    
</mapper>