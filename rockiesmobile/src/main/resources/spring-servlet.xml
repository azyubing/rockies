	<mvc:resources mapping="/assets/img/**" location="/assets/img/" />
	<mvc:resources mapping="/assets/demo/**" location="/assets/demo/" />
	<mvc:resources mapping="/**" location="/mobile/" />
	<mvc:annotation-driven />
