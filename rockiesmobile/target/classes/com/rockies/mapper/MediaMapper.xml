<?xml version="1.0" encoding="UTF-8" ?>
	<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.rockies.mapper.MediaMapper">
    
    <!-- 添加 返回主键id -->
    <insert id="insert" parameterType="com.rockies.model.Media" useGeneratedKeys="true" keyProperty="id">
    	INSERT INTO media(name,title,remark,mediaUrl,packageUrl,mediaType,mediaTypeName,ctdt,ctuser,updt,upuser) 
    	values(#{name},#{title},#{remark},#{mediaUrl},#{packageUrl},#{mediaType},#{mediaTypeName},#{ctdt},#{ctuser},#{updt},#{upuser})
    	
   		
    </insert>
    
    <!-- 根据主键删除 -->
    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer" >
    	delete from media where id=#{id}
    </delete>
    
    <!-- 获取对象集合 -->
    <select id="getAllList" resultType="com.rockies.model.Media">
    	select * from media
    </select>
    
    <!-- 获取对象集合 parameterType="Map" 选择是否分页-->
    <select id="getAllListByMap" resultType="com.rockies.model.Media" parameterType="Map">
    	select * from media
    	<where>
    		1=1
    		<if test="name!=null">
		  		and name like "%${name}%" 
			</if>
			<if test="title!=null and title!=''">
		  		and title=#{title}
			</if>
			<if test="remark!=null and remark!=''">
		  		and remark=#{remark}
			</if>
			<if test="mediaUrl!=null and mediaUrl!=''">
		  		and mediaUrl=#{mediaUrl}
			</if>
			<if test="packageUrl!=null and packageUrl!=''">
		  		and packageUrl=#{packageUrl}
			</if>
			<if test="mediaType!=null and mediaType!=''">
		  		and mediaType=#{mediaType}
			</if>
			<if test="mediaTypeName!=null and mediaTypeName!=''">
		  		and mediaTypeName=#{mediaTypeName}
			</if>
			<if test="ctdt!=null and ctdd!=''">
				and ctdt=#{ctdt}
			</if>
			<if test="ctuser!=null and ctuser!=''">
				and ctuser=#{ctuser}
			</if>
			<if test="upuser!=null">
				and upuser=#{upuser}
			</if>
			<if test="updt!=null and updt!=''">
				and updt=#{updt}
			</if>
    	</where>
		<if test="offset!=null and limit!=null">
			limit #{offset},#{limit}
		</if>
    </select>
    
    
    <!-- 获取map集合  parameterType="Map" 分页-->
    <select id="getAllListMap" resultType="Map" parameterType="Map">
    	select * from media
    	<where>
    		1=1
    		<if test="name!=null">
		  		and name like "%${name}%" 
			</if>
			<if test="title!=null and title!=''">
		  		and title=#{title}
			</if>
			<if test="remark!=null and remark!=''">
		  		and remark=#{remark}
			</if>
			<if test="mediaUrl!=null and mediaUrl!=''">
		  		and mediaUrl=#{mediaUrl}
			</if>
			<if test="mediaType!=null and mediaType!=''">
		  		and mediaType=#{mediaType}
			</if>
			<if test="mediaTypeName!=null and mediaTypeName!=''">
		  		and mediaTypeName=#{mediaTypeName}
			</if>
			<if test="packageUrl!=null and packageUrl!=''">
		  		and packageUrl=#{packageUrl}
			</if>
			<if test="ctdt!=null and ctdt!=''">
				and ctdt=#{ctdt}
			</if>
			<if test="ctuser!=null and ctuser!=''">
				and ctuser=#{ctuser}
			</if>
			<if test="upuser!=null and upuser!=''">
				and upuser=#{upuser}
			</if>
			<if test="updt!=null and updt!=''">
				and updt=#{updt}
			</if>
    	</where>
		<if test="offset!=null and limit!=null">
			limit #{offset},#{limit}
		</if>
    </select>
    
    <!-- 根据主键获取一个对象-->
    <select id="getOneByPrimaryKey" resultType="com.rockies.model.Media" parameterType="java.lang.Integer">
    	select * from media where id=#{id}
    </select>
    
    <!-- 总记录数-->
    <select id="getCount" resultType="java.lang.Long" parameterType="Map">
    	select count(*) from media 
    	<where>
    		1=1
    		<if test="name!=null">
		  		and name like "%${name}%" 
			</if>
			<if test="title!=null and title!=''">
		  		and title=#{title}
			</if>
			<if test="remark!=null and remark!=''">
		  		and remark=#{remark}
			</if>
			<if test="mediaUrl!=null and mediaUrl!=''">
		  		and mediaUrl=#{mediaUrl}
			</if>
			<if test="packageUrl!=null and packageUrl!=''">
		  		and packageUrl=#{packageUrl}
			</if>
			<if test="mediaType!=null and mediaType!=''">
		  		and mediaType=#{mediaType}
			</if>
			<if test="mediaTypeName!=null and mediaTypeName!=''">
		  		and mediaTypeName=#{mediaTypeName}
			</if>
			<if test="ctdt!=null and ctdt!=''">
				and ctdt=#{ctdt}
			</if>
			<if test="ctuser!=null and ctuser!=''">
				and ctuser=#{ctuser}
			</if>
			<if test="upuser!=null and upuser!=''">
				and upuser=#{upuser}
			</if>
			<if test="updt!=null and updt!=''">
				and updt=#{updt}
			</if>
    	</where>
    </select>
    
    <update id="updateObject"  parameterType="Map">
    	update media 
		<set>
			<if test="name!=null">
		  		name=#{name},
			</if>
			<if test="title!=null">
		  		 title=#{title},
			</if>
			<if test="remark!=null">
		  		 remark=#{remark},
			</if>
			<if test="mediaUrl!=null">
		  		 mediaUrl=#{mediaUrl},
			</if>
			<if test="packageUrl!=null">
		  		 packageUrl=#{packageUrl},
			</if>
			<if test="mediaType!=null">
		  		 mediaType=#{mediaType},
			</if>
			<if test="mediaTypeName!=null">
		  		 mediaTypeName=#{mediaTypeName},
			</if>
			<if test="ctdt!=null">
				ctdt=#{ctdt},
			</if>
			<if test="ctuser!=null">
				ctuser=#{ctuser},
			</if>
			<if test="upuser!=null">
				upuser=#{upuser},
			</if>
			<if test="updt!=null">
				updt=#{updt}
			</if>
		</set>
		where id=#{id}
    </update>
    
    <select id="getMediaTags" resultType="java.util.Map" parameterType="java.lang.Integer">
    	select * from mediatag where mediaId=#{vid}
    </select>
    
    <select id="getMediaSimilars" resultType="java.util.Map" parameterType="java.lang.Integer">
		    SELECT * FROM mediasimilar as m
		LEFT JOIN product as p on(p.pid = m.productId)
		where m.mediaId = #{vid}
    </select>
    
    <select id="morePackage" resultType="java.util.Map" parameterType="java.util.Map">
		  SELECT * FROM product as p where ptype = 0  and (
		  <if test="p0 != null">
		     p.tags LIKE CONCAT('%',#{p0},'%') 
		  </if>
		  <if test="p1 != null">
		  or p.tags LIKE CONCAT('%',#{p1},'%') 
		  </if>
		  <if test="p2 != null">
		  or p.tags LIKE CONCAT('%',#{p2},'%') 
		  </if>
		  )
    </select>
    
</mapper>